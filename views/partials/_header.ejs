<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <div></div>
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div class="row justify-content-right">
      <% if(user){ %>
      <div class="col">
        <form class="form-inline" action="/logout" method="POST" name="logout">
          <h5>Logged in as: <%= user.email %></h5>
          <button
            type="submit"
            class="nav-item btn btn-outline-dark btn-sm"
            style="margin-left: 2em"
          >
            Logout
          </button>
        </form>
      </div>
      <% } else { %>
      <div class="col-4">
        <form action="/login" method="GET" name="login">
          <button
            type="submit"
            class="nav-item btn btn-outline-dark btn-sm"
            style="margin-left: 2em"
          >
            Login
          </button>
        </form>
      </div>
      <div class="col-4">
        <form action="/register" method="GET" name="register">
          <button
            type="submit"
            class="btn btn-outline-dark btn-sm"
            style="margin-left: 2em"
          >
            Register
          </button>
        </form>
      </div>

      <% } %>
    </div>
  </nav>
</header>
